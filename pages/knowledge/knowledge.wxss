.title {
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
}
/* =======头部滑动组件样式 start====== */
.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  position: relative;
  top: 15.5%;
  left: 0;
  z-index: 99;
  border-bottom: 1rpx solid #e5e5e5;
}

.tab-item {
  display: inline-block;
  width: 25%;
  height: 100%;
  text-align: center;
}

.tab-item.active {
  color: #E84F50;
  position: relative;
}
.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}

.avatar .img {
  width: 100%;
  height: 100%;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

.expertInfo .name {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
}

.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #4675f9;
  color: #4675f9;
}
.scoll-h {
  height: 100%;
}
/* =======头部滑动组件样式 end====== */

/* 知识库内容样式 */
.knows-box {
  width: 100%;
  
  box-sizing: border-box;
  padding: 28rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}
.knows-box image {
  width: 180rpx;
  height: 130rpx;
  background-color: #ccc;
}
.knows-box .content {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 6%;
}
.knows-box .content .footnote {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 10%;
}
.knows-box .content .footnote text {
  color: #a8a8a8;
  font-size: 14px;
}