<!--pages/login/login.wxml-->
<view class="login-warp">
<form>
<view class="warp-pos">
 <input  placeholder="请输入用户名" type="text" class="userPwd" value="{{userName}}" disabled="true"/>

</view>

<view class="warp-pos">
<input placeholder="请输入原密码" class="userPwd" bindinput="getOldPwd" value="{{oldPwd}}" password/>
<image src="../../icons/nosee.png" class="img-pos"></image>
</view>

<view class="warp-pos">
<input placeholder="输入新密码" class="userPwd" bindinput="getNewPwd"
value="{{newPwd}}" password/>
<image src="../../icons/nosee.png" class="img-pos"></image>
</view>
<button class="login-btn" bindtap="changePwd">修改密码</button>
</form>

</view>

