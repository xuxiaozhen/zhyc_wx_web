/* 小标题样式 */
.content .title {
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 16px;
}
.content .title text {
  margin-left: 5%;
  position: relative;
}
.content .title text::before {
  content: "";
  display: block;
  position: absolute;
  top: 10%;
  left: -25%;
  width: 7rpx;
  height: 35rpx;
  background-color: #E84A4C;
}
