/* 顶部输入框 */
.title {
  display: flex;
  height: 125rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  align-items: center;
  border-bottom: 1px solid #ccc;
  font-size: 18px;
}
.title text {
  width: 157rpx;
}
.title input {
  margin-left: 30rpx;
  width: 90%;
}

/* 添加按钮 */
.addPhoto-box {
  height: 200rpx;
  border-bottom: 1rpx solid #ccc;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}
.addPhoto-box .add-btn {
  width: 125rpx;
  height: 125rpx;
  border: 1rpx solid #ccc;
  position: relative;
}
.addPhoto-box .add-btn::before {
  content: "+";
  top: 0;
  left: 0;
  display: block;
  font-size: 40px;
}

/* 缩略图 */
.thumbnail {
  width: 100%;
  padding: 30rpx 30rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
}
.thumbnail .thumbnail-box {
  width:47%;
  height:205rpx;
  background-color: #ccc;
  position: relative;
}
.thumbnail .thumbnail-box:nth-child(n+3) {
  margin-top: 20rpx;
}
.thumbnail .thumbnail-box image {
  width: 100%;
  height: 100%;
}
.thumbnail .thumbnail-box .rm-btn {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:-6%;
  right:-3%;
  background-color: orange;
  margin: 0;
  padding: 0;
  border-radius: 15rpx;
}

/* 提交按钮 */
.submit {
  width: 95%;
  margin-top: 35rpx;
}