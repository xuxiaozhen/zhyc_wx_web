/* 头部标题 */
.title {
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  border-bottom: 1rpx solid #ccc;
}

/* 内容部分 */
.content-box {
  width: 100%;
  height: 170rpx;
  box-sizing: border-box;
  padding: 0 20rpx 0 60rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content-box .content {
  display: flex;
  flex-direction: column;
}
.content-box .content .date {
  font-size: 16px;
  color: #AAA;
  margin-top: 20rpx;
}
.content-box image {
  width: 30rpx;
  height: 30rpx;
}
/* 加载更多按钮样式 */
.getMoreBtn {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 5%;
  
}
.getMoreBtn button {
  background-color: #E84F50;
  color: #fff;
}