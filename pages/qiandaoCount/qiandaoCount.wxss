.announce {
  display: flex;
  width: 100%;
  height: 100rpx;
  padding: 30rpx 0;
  align-items: center;
  border-bottom: 1px solid #e7e7e7;
}

.xian {
  width: 10rpx;
  height: 40rpx;
  background-color: red;
  margin-left: 15px;
}

.name {
  margin-left: 10px;
}

.title {
  margin-left: 10rpx;
  /* font-weight: bold; */
}

.noticeTime {
  width: 90%;
  height: 40rpx;
  background-color: #fff;
}

.come {
  float: left;
  width: 45%;
  margin-left: 20rpx;
  font-size: 0.6rem;
  color: #a89494;
}

.time {
  float: right;
  text-align: right;
  width: 45%;
  font-size: 0.6rem;
  color: #a89494;
}
.Divnote{
  width: 100%;
  height: 100rpx;
  margin: 30rpx 0 30rpx;
  border-bottom: 1px solid #e7e7e7;
}