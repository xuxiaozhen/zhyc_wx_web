/* pages/videoContent/videoContent.wxss */
/* 视频区域样式 */
.video-box {
  width: 100%;
  box-sizing: border-box;
  height: 400rpx;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  padding: 15rpx 20rpx;
}
.video-box .video {
  width: 100%;
  height: 100%;
  background-color: pink;
}

/* 待播放视频的样式 */
.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 280rpx;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}

.avatar {
  width:900rpx;
  height: 200rpx;
  position: relative;
  padding-right: 30rpx;
}

.avatar .img {
  width: 100%;
  height: 100%;
  background-color: pink;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

.expertInfo .name {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
}

.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #4675f9;
  color: #4675f9;
}